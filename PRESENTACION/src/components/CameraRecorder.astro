<style>
  .camera-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05); /* Sombra suave y elegante */
    border: 1px solid #eee;
    max-width: 700px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .video-frame {
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: #f8f9fa; /* Gris muy claro en lugar de negro puro */
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    border: 2px dashed #dee2e6; /* Borde punteado indicando "zona vac√≠a" */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    position: relative;
    z-index: 10;
  }

  .video-placeholder {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #adb5bd;
    z-index: 1;
  }

  .video-placeholder .icon {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  .actions {
    display: flex;
    justify-content: center;
  }
</style>