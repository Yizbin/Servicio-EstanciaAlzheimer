---
const currentPath = Astro.url.pathname;
---

<nav class="sidebar">
  <ul>
    <li class={`nav-item ${currentPath === "/" ? "active" : ""}`}>
      <a href="/">Inicio</a>
    </li>

    <li class={`nav-item ${currentPath === "/pacientes" ? "active" : ""}`}>
      <a href="/pacientes">Pacientes</a>
    </li>

    <li class={`nav-item ${currentPath === "/configuraciones" ? "active" : ""}`}>
      <a href="/configuraciones">Configuraciones</a>
    </li>
  </ul>
</nav>

<style>
  .sidebar {
    width: 220px;
    background: #eaeaea;
    padding: 2rem 1rem;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  .nav-item {
    list-style: none;
    padding: 0; 
    border-radius: 8px;
    transition: background-color 0.3s ease;
  }

  .nav-item a {
    text-decoration: none;
    color: #333;
    
    display: block;
    padding: 12px 20px;
    width: 100%;
    height: 100%;
  }

  .nav-item:hover {
    background-color: #f0f4f8;
  }

  .nav-item:hover a {
    color: #007bff; 
  }

  .nav-item:active {
    background-color: #d1e3f8;
    transform: scale(0.98);
  }

  .active {
  background-color: #d1e3f8;
}

.active a {
  color: #007bff;
  font-weight: bold;
}
</style>
