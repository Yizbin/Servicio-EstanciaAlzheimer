---
const currentPath = Astro.url.pathname;
---

<nav class="sidebar">
  <ul>
    <li class={`nav-item ${currentPath === "/" ? "active" : ""}`}>
      <a href="/">Inicio</a>
    </li>

    <li class={`nav-item ${currentPath === "/patients" ? "active" : ""}`}>
      <a href="/patients">Pacientes</a>
    </li>

    <li class={`nav-item ${currentPath === "/configurations" ? "active" : ""}`}>
      <a href="/configurations">Configuraciones</a>

    </li>
  </ul>
</nav>

<style>
  .sidebar {
    width: 240px;
    background: #ffffff; 
    border-right: 1px solid #eaeaea; 
    padding: 2rem 1.2rem;
  }

  ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem; 
  }

  .nav-item {
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .nav-item a {
    text-decoration: none;
    color: #555;
    display: block;
    padding: 12px 16px;
    font-weight: 500;
  }

  .nav-item:hover {
    background-color: #f8f9fa;
  }

  .nav-item:hover a {
    color: #007bff; 
  }

  .nav-item:active {
    transform: scale(0.98);
  }

  .active {
    background-color: #e6f0fa; 
  }

  .active a {
    color: #007bff;
    font-weight: 600;
  }
</style>
