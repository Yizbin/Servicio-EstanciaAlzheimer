---
interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<div class="topbar">
  <div class="avatar"></div>
  <h1>{title}</h1>
</div>

<style>
  .topbar {
    display: flex;
    align-items: center;
    padding: 1rem 2rem;
    border-bottom: 1px solid #ddd;
    background: white;
  }

  .avatar {
    width: 40px;
    height: 40px;
    background: #ddd;
    border-radius: 50%;
    margin-right: 1rem;
  }

  h1 {
    font-size: 1.5rem;
  }
</style>